{
    "compilerOptions": {
        // Basic Options
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext"],
        "allowJs": false,
        "checkJs": false,
        "declaration": true,
        "sourceMap": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "outDir": "dist",

        // Strict Type-Checking Options
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,

        // Additional Checks
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": false,

        // Module Resolution Options
        "moduleResolution": "node"
    }
}
